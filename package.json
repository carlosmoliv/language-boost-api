{
  "name": "knowledge-boost-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:carlosmoliv/knowledge-boost-api.git",
  "author": "Carlos Oliveira <hello@carlosmoliveira.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r dotenv/config --respawn --transpile-only --ignore-watch node_modules --inspect=0.0.0.0:9229 ./src/main/server.ts",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "start": "node -r dotenv/config dist/main/server.js",
    "lint": "eslint .",
    "lint:fix": "yarn eslint --fix",
    "prepare": "husky install",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "test:staged": "yarn test --findRelatedTests",
    "test:unit": "yarn test --watch -c jest.unit.config.ts",
    "test:integration": "yarn test --watch -c jest.integration.config.ts"
  },
  "dependencies": {
    "@typegoose/typegoose": "^12.0.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^8.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.0",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^5.0.6",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.3.3"
  },
  "_moduleAliases": {
    "@root": ".",
    "@main": "dist/main",
    "@domain": "dist/domain",
    "@application": "dist/application",
    "@infra": "dist/infra",
    "@presentation": "dist/presentation",
    "@utils": "dist/utils",
    "@tests": "tests"
  }
}
