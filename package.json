{
  "name": "api-knowledge-boost-courses",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:carlosmoliv/knowledge-boost-api.git",
  "author": "Carlos Oliveira <hello@carlosmoliveira.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules -r dotenv/config --inspect=0.0.0.0:9229 src/main",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "start": "node -r dotenv/config dist/main",
    "lint": "eslint .",
    "lint:fix": "yarn eslint --fix",
    "prepare": "husky install",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "test:staged": "yarn test --findRelatedTests"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.5.0",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^5.0.6",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "module-alias": "^2.2.3"
  },
  "_moduleAliases": {
    "@root": ".",
    "@main": "src/main",
    "@domain": "src/domain"
  }
}
