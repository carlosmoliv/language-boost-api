{
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": ["./src", "./tests"],
    "target": "ES2021",
    "incremental": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@domain/*": ["src/domain/*"],
      "@application/*": ["src/application/*"],
      "@infra/*": ["src/infra/*"],
      "@main/*": ["src/main/*"],
      "@presentation/*": ["src/presentation/*"],
      "@utils/*": ["src/utils/*"],
      "@tests/*": ["tests/*"]
    },
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": ["./src", "./tests"]
}
