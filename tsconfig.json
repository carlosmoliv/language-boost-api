{
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": ["./src", "./tests"],
    "target": "ES2021",
    "incremental": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@domain/*": ["domain/*"],
      "@application/*": ["application/*"],
      "@infra/*": ["infra/*"],
      "@main/*": ["main/*"],
      "@presentation/*": ["presentation/*"],
      "@utils/*": ["utils/*"],
      "@tests/*": ["../tests/*"]
    },
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": ["./src", "./tests"]
}
